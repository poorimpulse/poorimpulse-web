doctype xml
include ./_mixins.jade
rss(version='2.0' xmlns:itunes='http://www.itunes.com/dtds/podcast-1.0.dtd' xmlns:atom='http://www.w3.org/2005/Atom')
    channel
      title Poor Impulse Control
      description A podcast of ambitious people with poor impulse control
      link http://poorimpulse.co/
      atom:link(href='http://poorimpulse.co/feed.rss' rel='self' type='application/rss+xml')
      language en
      ttl 1440
      lastBuildDate
          - var now = new Date()
          = now.toUTCString()
      pubDate
          = now.toUTCString()
      itunes:author Poor Impulse, Co.
      itunes:subtitle A podcast of ambitious people with poor impulse control
      itunes:summary
          | A monthly podcast that transforms games of Fiasco into short stories narrated by a rotating
          | cast of narrators.
      itunes:owner
          itunes:name Russell Hay
          itunes:email russell.hay@gmail.com
      itunes:image(href='http://poorimpulse.co/itunes_logo.png')
      itunes:explicit No
      itunes:category(text="Comedy")

      item
        title Introduction
        - var date = new Date(2015, 9 /* because javscript is stupid */, 15)
        pubDate= date.toUTCString()
        description
          | <![CDATA[
          p
            a(href='http://poorimpulse.co/') Poor Impulse Control
            |  is a podcast generated by playing games
            | of Fiasco with friends and family. I
            | started this podcast as an excuse to
            | learn audio editing, narration, and short
            | story writing.
            | It's a continual learning process, and I appreciate
            | you joining me on this journey.  Some episodes
            | will be rough, especially at the beginning as I
            | learn all the tricks of recording and editing audio,
            | so bear with me.
          p
            | And, of course, if you are interested in playing Fiasco for
            | the podcast, or narrating an episode, visit&nbsp;
            a(href='http://poorimpulse.co/about') poorimpulse.co/about
            |  to apply.
          p Thanks, and enjoy the ride.
          | ]]>
        link http://poorimpulse.co/
        guid http://poorimpulse.co/
        enclosure(url="http://poorimpulse.co/audio/intro.mp3" length="492449" type="audio/mpeg")
        itunes:author Poor Impulse, Co.
        itunes:explicit No
        itunes:duration 00:00:41

      for item in episodes
          item
              title= item.title
              - var date = new Date(item.date)
              pubDate= date.toUTCString()
              description
                | <![CDATA[
                | <p>#{item.summary}</p>
                +playset(item)
                | <p>!{item.notes}</p>
                | ]]>
              link http://poorimpulse.co/#{item.guid}
              guid http://poorimpulse.co/#{item.guid}
              enclosure(url="http://poorimpulse.co/audio/#{item.guid}.mp3" length="#{item.audioLength}" type="audio/mpeg")
              itunes:author= item.narrated_by.name
              itunes:explicit= item.explicit
              itunes:duration= item.duration
              itunes:keywords= item.tags
